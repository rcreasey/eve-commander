extends layout

block context
  h3 #{title}
  p This chart shows the refining amount of each mineral in a given ore type.

  include toggle_hide

  :coffeescript
    find_optimal = (a, b) ->
      (if parseInt($(a).text(), 10) < parseInt($(b).text()) then 0 else 1)

    $(document).ready ->
      $.ajax
        type: "GET"
        url: "/data/ores.json"
        dataType: "json"
        success: (data) ->
          $('.loading').remove()
          tbody = $('tbody')
          $.each data.ores, (i, ore) ->
            tr = $('<tr>')
            tr.addClass('ore-class') if !(i%3)
            tr.append $("<th>").text(ore.name)
            $.each ore.refines, (i, refine) ->
              tr.append $("<td>").addClass(data.mineral_index[i].toLowerCase()).text(refine)

            tbody.append tr
          
          hide_ores()

  table.table.table-condensed.table-ore
    thead
      tr
        th Ore
        th.tritanium Tritanium
        th.pyerite Pyerite
        th.mexallon Mexallon
        th.isogen Isogen
        th.nocxium Nocxium
        th.zydrine Zydrine
        th.megacyte Megacyte
        th.morphite Morphite
    tbody
      tr.loading
        th(colspan=12)     
          h4 
            i.icon-spinner.icon-spin.icon-large
            | Calculating ore yield...

