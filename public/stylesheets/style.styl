body
  font-size 14px

// Ore Tables
.table-ore 
  margin-top 1em

.table-ore thead tr th,
.table-ore tbody tr td,
.table-ore tbody tr th
  background-color #f9f9f9
  text-align center

.table-ore tbody tr.ore-class td,
.table-ore tbody tr.ore-class th
  background-color #f0f0f0

.table-ore thead tr th:first-child
  text-align left

.table-ore tbody tr th
  font-weight normal
  text-align left

.table-ore tbody tr.ore-class th
  font-weight bold

.table-ore tbody tr td.optimal
  background-color #dff0d8
  color #468847
  font-weight bold

.table-ore thead th 
  height 70px

.table-ore th.ore-icon
